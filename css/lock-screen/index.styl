$bgi='https://images.unsplash.com/photo-1440613905118-99b921706b5c?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=255b304482a2f50d0917f3de7b06251e%27'
*
  margin 0
  padding 0

html,body
  width 100%
  height 100%

.page
  width 100%
  height 100%
  overflow hidden
  background-image url($bgi)
  background-repeat no-repeat
  background-size auto 100%
  
.page_hd
  width 1.866667rem /* 70/37.5 */
  height 0.555rem
  color #fff
  font-size 0.46rem
  margin 2.96rem auto
.page_content_number
  width 6.96rem
  display flex
  margin-left 1.45rem
.number
  width 1.62rem
  height 1.62rem
  border-radius 50%
  border 2px solid #81969c
  font-size 25px
  text-align center
  font-weight 100
  color #e8ffff
  line-height 1.62rem
  margin-bottom 0.72rem

.numbermiddle,.numberleft
  margin-right 1.03rem

.page_foot
  display flex
  padding-top 0.59rem
  margin-bottom 0.259rem
.page_font
  color rgba(255,255,255,.5)
  font-size 0.44rem
.page_foot_left
  @extend .page_font
  margin-left 0.25rem
  flex 1
.page_foot_right
  @extend .page_font
  width 1.88rem
  